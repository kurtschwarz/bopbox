{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "config.schema.json",
  "type": "object",
  "properties": {
    "debug_mode": {
      "type": "boolean"
    },

    "wifi_ssid": {
      "type": "string"
    },
    "wifi_password": {
      "type": "string"
    },

    "http_server_enabled": {
      "type": "boolean"
    },
    "http_server_port": {
      "type": "integer"
    }
  },
  "required": [
    "debug_mode"
  ]
}
